/*
 * style.styl
 */

bodyColor = gray
linkColor = rgb(82, 122, 160)
linkBackgroundHoverColor = #75ACDF
niceGray = rgb(240, 241, 243)
niceBlue = rgb(118, 189, 255)
niceBlueGray = rgb(117, 172, 223)
backWithOpacity = rgba(0, 0, 0, 0.24)
darkGray = rgb(53, 71, 87)
mygray = rgb(86, 89, 97)
lightGray = rgb(209, 209, 209)
lighterGray = rgb(218, 218, 218)
anotherGray = rgb(86, 115, 141)

@font-face
    font-family: 'Anaheim';
    font-style: normal;
    font-weight: 400;
    src: local('Anaheim'), local('Anaheim-Regular'), url('fonts/anaheim.woff') format('woff');

@font-face
  font-family: 'Roboto';
  font-style: normal;
  font-weight: 400;
  src: local('Roboto Regular'), local('Roboto-Regular'), url('fonts/roboto.woff') format('woff');

*
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);

input, textarea
    -moz-user-select: text;
    -webkit-user-select: text;
    -ms-user-select: text;
    user-select: text;

body, html
    background bodyColor
    height 100%
    width 100%
    position absolute
    overflow hidden
    -webkit-font-smoothing: antialiased;

a
    color linkColor

a:hover
    background linkBackgroundHoverColor

.anim-screen
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    z-index 999
    background: rgb(250, 250, 250);
    display none
    opacity 0

.documentation
    z-index 1
    background rgb(250,250,250);
    height 100%
    width 100%
    position absolute

    section.content
        height: unquote('-webkit-calc(100% - 30px)');
        height: unquote('-moz-calc(100% - 30px)');
        height: unquote('-ms-calc(100% - 30px)');
        height: unquote('calc(100% - 30px)');
        width 100%
        position relative
        div.doc-content
            height: 100%;
            overflow:auto;
            -webkit-overflow-scrolling:touch;
            max-width 1280px
            margin auto
            dl
                font-size: 20px;
                font-family Anaheim, sans-serif;
                margin 0 10px
                dd
                    margin: 0 0 0 20px;
                dt
                    font-weight:bold;
            p
                color: black;
                font-size: 20px;
                margin:15px 10px 10px 10px;
                font-family Anaheim, sans-serif;
                border-bottom: 1px solid rgba(90, 120, 148, 0.25)
                padding 10px 5px
                strong
                    font-weight:bold;
            p.clean
                border-bottom:none;
            p.api-code
                color black
                border-bottom none
                font-weight: bold;
            p.normal
                color: black;
                border-bottom none
            h1
                color: black;
                font-weight: bold;
                font-family Anaheim, sans-serif;
                margin: 20px 0 0 10px;
                text-shadow: 1px 1px 2px lightGray;
                font-size: 25px;
            h2
                color: black;
                font-weight: bold;
                font-family Anaheim, sans-serif;
                margin: 0 0 0 10px;
                text-shadow: 1px 1px 2px lightGray;
                font-size: 25px;
                &.init
                    margin: 0 0 30px 20px;

    div.active-area
        -webkit-user-select:none;
        height 30px;
        width 100%
        text-align center
        position relative
        background: niceBlue;
        border-bottom: 1px solid niceBlueGray;
        cursor: pointer;
        div.chip-container
            background: niceBlue;
            position: relative;
            width: 100px;
            height: 50px;
            margin: auto;
            top: -20px;
            border-radius: 10px;
            div.chip, div.chip2
                position absolute
                width 100%
                height 100%
                span
                    position absolute
                    font-size 20px
                    font-size: 30px;
                    color niceGray
                    top: -2px;
                    left: 38px;
            div.msg
                position absolute
                width 100%
                height 100%
                strong
                    position absolute
                    color niceGray
                    top: 23px;
                    left: -100px;
                    font-size: 17px;
                    width: 300px;
                    font-family: 'Roboto', sans-serif;
                    opacity : 0
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
            div.chip2
                position absolute
                width 100%
                height 100%
                span
                    position absolute
                    font-size 20px
                    font-size: 30px;
                    color niceGray
                    top: -2px;
                    left: 38px;
        a.sign
            text-decoration none
            position absolute
            top 6px
            right 6px
            color niceGray

.editor
    z-index 0
    background rgb(243, 243, 243)
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    .menu-list
        position: absolute;
        top: 30px;
        width: 100%;
        height: 50px;
        background: #F00;
        z-index: 10;
        overflow hidden;
        border-bottom: 1px solid #EEEDED;
        -moz-box-sizing: border-box;
        -ms-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        color: #76BDFF;
        background-color: #FAFAFA;
        font-family: Anaheim, sans-serif;
        div.wrapper
           position: absolute;
           top: 0px;
           width: 100%;
           height: 100%;
        ul.scroller
            position: absolute;
            -webkit-tap-highlight-color: rgba(0,0,0,0);
            width: 100%;
            -webkit-transform: translateZ(0);
            -moz-transform: translateZ(0);
            -ms-transform: translateZ(0);
            -o-transform: translateZ(0);
            transform: translateZ(0);
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            -webkit-text-size-adjust: none;
            -moz-text-size-adjust: none;
            -ms-text-size-adjust: none;
            -o-text-size-adjust: none;
            text-size-adjust: none;
        li
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            cursor pointer
            padding: 0 0 0 20px;
            line-height: 30px;
            font-size: 20px;
            &.section
                padding: 0 0 0 10px;
                color: #51A2EE;
                font-weight: bold;
                cursor default
            &.active
                color #51A2EE
    div.toolbar
        z-index: 11;
        -webkit-user-select:none;
        height 50px
        position absolute
        top 30px
        width 100%
        background-color rgb(250,250,250)
        line-height: 50px;
        padding: 0 0 0 0px;
        -moz-box-sizing: border-box;
        -ms-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        border-bottom: 1px solid #DADADA;
        .button
            -webkit-appearance: none;
            border: none;
            background: rgb(250,250,250);
            height: 50px;
            width: 35px;
            border-radius: 0;
            float left
            font-size 21px;
            margin: 0
            padding 0
            color niceBlue
            cursor pointer
            border-bottom: 1px solid #DADADA;
        .button.sign, .button.logout
            right: 0px;
            width:50px;
            position: absolute;
            z-index 8
        .button.logout
            z-index 6
            img
                width: 26px;
                height: 26px;
                position: absolute;
                top: 13px;
                left: 13px;
                border: 1px solid #dadada;
                box-sizing border-box
        .button.active
            color:hsl(209, 66%, 64%);
        .menu
            background: url(../images/arrow@2x.png) 90% 17px no-repeat;
            color niceBlue
            background-size: 14px;
            height: 50px;
            width: 120px;
            float left
            margin: 0
            padding 0 0 0 10px
            overflow hidden
            z-index: 1;
            cursor pointer
            background-color: rgb(250,250,250);
            font-family: Anaheim, sans-serif;
            font-size:20px;
            font-weight: bold;
            border-bottom: 1px solid #DADADA;
            -moz-box-sizing: border-box;
            -ms-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            &.active
                color #51A2EE
                background: url(../images/arrow-active@2x.png) 90% 17px no-repeat;
                background-color: rgb(250,250,250);
                background-size: 14px;
        .select-container
            background: url(../images/arrow@2x.png) 90% 17px no-repeat;
            color niceBlue
            background-size: 14px;
            height: 50px;
            width: 120px;
            float left
            margin: 0
            padding 0
            overflow hidden
            z-index: 1;
            background-color: rgb(250,250,250);
            .select
                width: 140px;
                font-size: 14px;
                padding: 0 30px 0 10px;
                color: inherit;
                margin: 0;
                z-index: 0;
                background: transparent;
                text-overflow ellipsis
                font-family: Anaheim, sans-serif;
                font-size: 18px;

    .CodeMirror
        -webkit-user-select : none;
        position absolute
        background #fff
        top 80px
        width 100%
        height: unquote('-webkit-calc(100% - 80px)');
        height: unquote('-moz-calc(100% - 80px)');
        height: unquote('-ms-calc(100% - 80px)');
        height: unquote('calc(100% - 80px)');
        background:rgb(253, 253, 253);
        font-family: monospace;
        font-size: 15px;
        .CodeMirror-gutters
            border-right: 1px solid rgb(236, 236, 236);
            background: none;

textarea
    position absolute
    background #fff
    top 80px
    width 100%
    -webkit-appearance none
    border-radius 0
    font-size 16px
    height: unquote('-webkit-calc(100% - 80px)');
    height: unquote('-moz-calc(100% - 80px)');
    height: unquote('-ms-calc(100% - 80px)');
    height: unquote('calc(100% - 80px)');
    border none
    overflow: auto;
    -webkit-overflow-scrolling : touch;
    -webkit-box-sizing:border-box;
    -ms-box-sizing:border-box;
    -moz-box-sizing:border-box;
    box-sizing:border-box;
    font-family: monospace;
    font-size: 14px;



.alert
    -webkit-overflow-scrolling : touch;
    -webkit-box-sizing:border-box;
    -ms-box-sizing:border-box;
    -moz-box-sizing:border-box;
    box-sizing:border-box;
    background-color: rgb(247, 247, 247);
    h2
        color: rgb(238, 238, 238);
        font-family: 'Roboto', sans-serif;
        padding: 5px 10px 10px 10px;
        background: rgb(118, 189, 255);
        font-size: 24px;
        height: 32px;
        border-bottom: 1px solid rgb(117, 172, 223);
    div
        text-align: left;
        padding: 10px;
        overflow: auto;
        height: -webkit-calc(100% - 97px);
        height: unquote('-webkit-calc(100% - 97px)');
        height: unquote('-moz-calc(100% - 97px)');
        height: unquote('-ms-calc(100% - 97px)');
        height: unquote('calc(100% - 97px)');
        font-family: 'Roboto', sans-serif;
        font-size: 18px;
        color: rgb(68, 68, 68);
        background: rgb(250, 250, 250);
    span
        -webkit-appearance: none;
        font-weight: bold;
        width: 100%;
        bottom: 0;
        position: absolute;
        height: 30px;
        border: none;
        background: rgb(118, 189, 255);
        text-align: center;
        font-size: 18px;
        color: rgb(245, 245, 245);
        font-family: Anaheim, sans-serif;
        line-height: 30px;
        border-top: 1px solid rgb(117, 172, 223);
    span
        cursor pointer;
    span.active
        cursor pointer;
        background: rgb(117, 172, 223);
        color white;
    div.tutorial
        width: 100%;
        height: 100%;
        padding 0
        margin 0
        text-align center
        img
            width 285px
            margin 0 auto;
    i
        position: absolute;
        bottom: 40px;

.prompt
    -webkit-overflow-scrolling : touch;
    -webkit-box-sizing:border-box;
    -ms-box-sizing:border-box;
    -moz-box-sizing:border-box;
    box-sizing:border-box;
    background-color: rgb(247, 247, 247);
    h2
        color: rgb(238, 238, 238);
        font-family: 'Roboto', sans-serif;
        padding: 5px 10px 10px 10px;
        background: rgb(118, 189, 255);
        font-size: 24px;
        height: 32px;
        border-bottom: 1px solid rgb(117, 172, 223);
    input
        -moz-box-sizing: border-box;
        -ms-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        border: none;
        height: 40px;
        font-size: 24px;
        padding: 0 5px 0 10px;
        color: rgb(88, 88, 88);
        margin: 0;
        background: rgb(250, 250, 250);
        width 100%
    div
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        color: rgb(68, 68, 68);
        padding 10px
        overflow:auto;
        height:43px
        background: rgb(250, 250, 250);
    span
        -webkit-appearance: none;
        font-weight: bold;
        width: 50%;
        bottom: 0;
        position: absolute;
        height: 40px;
        border: none;
        background: rgb(118, 189, 255);
        text-align: center;
        font-size: 20px;
        color: rgb(245, 245, 245);
        font-family: Anaheim, sans-serif;
        line-height: 40px;
        border-top: 1px solid rgb(117, 172, 223);
        box-sizing: border-box;
        left: 0;
        border-right: 1px solid rgb(117, 172, 223);
    span.ok
        left: 50%;
    span
        cursor pointer;
    span.active
        background: rgb(117, 172, 223);
        color white;
